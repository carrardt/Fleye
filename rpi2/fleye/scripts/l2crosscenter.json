// green / red objects tracking
{
	"EnvDefaults" :
	{
		"CCMD" : 4
	}
	,
	"RenderBuffers" :
	{
		"l2c-render-buffer" : {}
	}
	,
	"FrameBufferObjects" :
	{
		"fbo1" : {} ,
		"fbo2" : {}
	}
    ,
    "GLShaders" :
    {
		"init" : {
			"fragment-shader" : "maskInitL2Cross_fs" ,
			"textures" : { "tex" : "CAMERA" } ,
			"output" : "fbo1"
		}
		,
		"l2cross" : {
			"fragment-shader" : "L2CrossIteration_fs" ,
			"textures" : { "tex" : ["fbo1","fbo2"] } ,
			"output" : ["fbo2","fbo1"] ,
			"passes" : "$CCMD"
		}
		,
		"l2cross-final" : {
			"fragment-shader" : "L2CrossIteration_fs" ,
			"textures" : { "tex" : "l2cross" } ,
			"output" : "l2c-render-buffer"
		}
		,
		"display" : {
			"fragment-shader" : "drawL2Cross_fs" ,
			"textures" : { "tex_l2cross" : "l2cross" , "tex_camera" : "CAMERA" }
		}
		,
		"overlay" : {
			"vertex-shader" : "zhue_vs" ,
			"fragment-shader" : "color_fs" ,
			"rendering" : { "plugin" : "l2CrossCenter" , "function" : "drawObjectPosition" }
		}
    }
    ,
    "CPUFunctions" :
    {
		"l2CrossCenter" : {
			"plugin" : "l2CrossCenter" , 
			"setup" : "l2CrossCenter_setup" ,
			"run" : "l2CrossCenter_run" ,
			"thread-id" : 1
		}
		,
		"syncThread" : {
			"plugin" : "syncThread" , 
			"setup" : "syncThread_setup" ,
			"run" : "syncThread_run" ,
			"thread-id" : 0
		}
    }
    ,
    "ProcessingLoop" : [ "init", "l2cross", "display", "l2cross-final", "l2CrossCenter", "syncThread", "overlay" ]
}

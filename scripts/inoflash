PFILE=$1

FILEDIR=`dirname $1`
FILENAME=`basename $1`
CURDIR=`pwd`
RELPATH=`echo $FILEDIR|grep -c "^\."`
if [ $RELPATH -ge 1 ]
then
	FILEDIR="$CURDIR/$FILEDIR"
fi

if [ "x$FAKECHROOT" == "xtrue" ]
then
	FILE=$FAKECHROOT_BASE/$FILEDIR/$FILENAME
else
	FILE=$FILEDIR/$FILENAME
fi

SERIALDEV="/dev/ttyACM0"

echo "flashing $FILE using $SERIALDEV"
$AVR_DUDE -p m328p -c arduino -P $SERIALDEV -D -V -U flash:w:$FILE:i


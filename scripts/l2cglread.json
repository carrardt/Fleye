// green / red objects tracking
// Example usage :
// ./Fleye/fleye -ex fixedfps -res 1280x960 -geom 768x512+32+32 -script l2crosscenter
{
	"EnvDefaults" :
	{
		"CCMD" : 5
	}
	,
	"Textures" :
	{
		"bitmapfont" : { }
	}
	,
	"FrameBufferObjects" :
	{
		  "fbo1" : { }
		, "fbo2" : { } 
	}
    ,
    "GLShaders" :
    {
		"gpu-l2cross-init" : {
			"fragment-shader" : "L2CrossInit_fs" ,
			"textures" : { "tex" : "CAMERA" } ,
			"output" : "fbo1"
		}
		,
		"gpu-l2cross-iteration" : {
			"fragment-shader" : "L2CrossIteration_fs" ,
			"textures" : { "tex" : ["fbo1","fbo2"] } ,
			"output" : ["fbo2","fbo1"] ,
			"passes" : "$CCMD"
		}
		,
		"gpu-l2cross-final" : {
			"fragment-shader" : "L2CrossFinalCompact_fs" 
			, "textures" : { "tex" : "gpu-l2cross-iteration" }
			, "rendering" : "drawQuaterHeight"
		}
		,
		"gpu-display-masking" : {
			"fragment-shader" : "drawL2Cross_fs" ,
			"textures" : { "tex_l2cross" : "gpu-l2cross-iteration" , "tex_camera" : "CAMERA" }
		}
		,
		"gpu-display-position" : {
			"fragment-shader" : "color_fs" ,
			"rendering" : "drawTrackingPos"
		}
		,
		"gpu-display-fps" : { 
			"fragment-shader" : "texture_fs" , 
			"textures" : { "tex" : "bitmapfont" } ,
			"rendering" : "drawText"
		}
    }
    ,
    "CPUFunctions" :
    {
		"cpu-l2CrossCenter" : {
			"plugin" : "l2CrossCenter" , 
			"thread-id" : "main" // will schedule multiple instance of this task on every cpu worker thread
		}
		,
		"cpu-print-fps" : 
		{ 
			"plugin" : "printFPS" ,
			"thread-id" : "main" // scheduled on one thread only, any available one
		}
    }
    ,
    "ProcessingLoop" : [
		  "cpu-print-fps" 			
		, "gpu-l2cross-init"		
		, "gpu-l2cross-iteration" 
		, "gpu-l2cross-final" 		
		, "cpu-l2CrossCenter"
		, "gpu-display-masking"
		, "gpu-display-fps"
		, "gpu-display-position"

		]
}

// motion vector build
{
	"Textures" :
	{
		"bitmapfont" : { }
	}
	,
	"FrameBufferObjects" :
	{
		  "fbo-filter" : { "width" : 512, "height" : 512 }
		, "fbo-prev"   : { "width" : 512, "height" : 512 }
		, "fbo-mv"     : { "width" : 512, "height" : 512 }
	}
    ,
    "GLShaders" :
    {
		// noise removal needs two different passes
		// 1st one computes horizontal part of the gaussian convolution and an edge detection metric
		"gpu-remove-noise-1" : {
			"fragment-shader" : "noiseRemoval1_fs" ,
			"textures" : { "tex" : "CAMERA"  } ,
			"output" : "fbo-mv"
		}
		,
		// 2nd one computes the vertical part of the convolution and blend the result with orginal image
		// using the edge detection metric
		"gpu-remove-noise-2" : {
			"fragment-shader" : "noiseRemoval2_fs" ,
			"textures" : { "tex" : "CAMERA" , "tex_nr1" : "fbo-mv" } ,
			"output" : "fbo-filter"
		}
		,
		"gpu-edge-detect" : {
			"fragment-shader" : "edgeDetect_fs" ,
			"textures" : { "tex" : "fbo-filter" } ,
			"output" : "fbo-mv"
		}
		,
		"gpu-copy-prev" : {
			"fragment-shader" : "texture_fs" ,
			"textures" : { "tex" : "fbo-filter" } ,
			"output" : "fbo-prev" 
		}
		,
		"gpu-display-filter" : { 
			"fragment-shader" : "texture_fs" , 
			"textures" : { "tex" : "fbo-mv" }
		}
		,
		"gpu-display-text" : { 
			"fragment-shader" : "texture_fs" , 
			"textures" : { "tex" : "bitmapfont" } ,
			"rendering" : "drawText"
		}
    }
    ,
    "CPUFunctions" :
    {
		"cpu-print-fps" : 
		{ 
			"plugin" : "printFPS" ,
			"thread-id" : 0
		}
		,
		"cpu-pan-tilt" : 
		{ 
			"plugin" : "panTiltController" ,
			"thread-id" : 0
		}
    }
    ,
    "ProcessingLoop" : [
		  "cpu-print-fps"
		//, "cpu-pan-tilt"
		, "gpu-remove-noise-1"
		, "gpu-remove-noise-2"
		, "gpu-edge-detect"
		, "gpu-display-filter"
		, "gpu-display-text"
		, "gpu-copy-prev"
		]
}
